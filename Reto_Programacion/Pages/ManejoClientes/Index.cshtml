@page
@model Reto_Programacion.Pages.ManejoClientes.IndexModel

@{
    ViewData["Title"] = "Lista de Clientes";
}
<!-- Vista principal dentro del manejo de clientes -->
<br />
<div class=" container row">
    <div class="col-6">
        <h1 class=" text-info">Lista de Clientes</h1>
    </div>
    <div class=" col-6 text-right">
        <a asp-page="Create" class=" btn btn-primary">Crear Nuevo Cliente</a>
    </div>
</div>
<hr />
<!-- Mensaje de alerta al realizar alguna operacion CRUD dentro del aplicativo -->
@if (Model.Mensaje != null)
{
    <div class=" alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Mensaje
    </div>
}

<!-- Creacion y validacion de la vista para los registros de la BD -->
@if (Model.Cliente.Count() > 0)
{
    <table class="table table-striped border table-responsive-md text-center" align="center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente[0].NombreCliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente[0].Cncsn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente[0].Cdad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente[0].Tlfno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente[0].ID)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cliente)
            {
                <tr>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.NombreCliente)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Cncsn)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Cdad)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Tlfno)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td align="center">
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-success btn-sm">Editar</a>

                        <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-success btn-sm">Detalles</a>

                        <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-danger btn-sm">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>
        <small class="text-muted">No hay Clientes Registrados</small>
    </h3>
    <p></p>
}