@page
@model Reto_Programacion.Pages.ManejoClientes.DeleteModel

@{
    ViewData["Title"] = "Borrar";
}

<!-- Creacion de la vista formulario para desactivar un cliente. -->
<br />
<div class=" container row">
    <div class="col-6">
        <h1 class=" text-info">Desactivar Cliente</h1>
    </div>
</div>
<hr />

<h3>
    <small class="text-danger">Esta seguro desea desactivar al cliente?: </small>
</h3>
<div>
    <h4><small class="text-muted">Datos del Cliente </small></h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.NombreCliente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.NombreCliente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Cncsn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Cncsn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Cdad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Cdad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Tlfno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Tlfno)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Cliente.ID" />
        <div class="form-group">
            <label asp-for="Cliente.Status" class="control-label"></label>
            <select id="myList" asp-for="Cliente.Status" class="form-control">
                @if (Model.Cliente.Status == "Inactivo")
                {
                    <option value="Activo">Activo</option>
                }
                else
                {
                    <option value="Inactivo">Inactivo</option>
                }
            </select>
            <span asp-validation-for="Cliente.Status" class="text-danger"></span>
        </div>
        <input type="submit" value="Desactivar" class="btn btn-danger" />
        &nbsp;&nbsp;&nbsp;&nbsp;
        <a asp-page="./Index" class="btn btn-success btn-sm">Back to List</a>
    </form>
</div>
